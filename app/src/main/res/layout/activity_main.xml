<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBlack"
    android:stretchColumns="*"
    >
    <TableRow>
        <EditText
            android:id="@+id/edtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:gravity="right"
            android:layout_span="4"
            android:inputType="none"
            android:editable="false"
            android:textColor="@color/colorWhite"
            android:lines="1"
            android:background="@color/colorBlack"
            />
    </TableRow>
    <TableRow>
        <Button
            android:layout_span="3"
            android:padding="20dp"
            />
        <Button
            android:id="@+id/btnDelete"
            android:layout_span="1"
            android:text="Delete"
            android:padding="20dp"
            />
    </TableRow>


    <TableRow>
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="1"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="2"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"

            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="3"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="+"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="4"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="5"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="6"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="-"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="7"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="8"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="9"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="*"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="0"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="."
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="="
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="/"
            android:padding="@dimen/dimen25dp"
            android:textSize="30sp"
            />
    </TableRow>


</TableLayout>
